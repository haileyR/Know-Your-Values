<div class="container">
  <div id='addedvalues'>
    <h2> <%= friend.first_name %>'s values </h2>
    <h3><%= friend.bio %></h3>
    <%= erb :'values/_addedvalues', locals: {valueIDs: valueIDs} %>

  </div>

  <div id='possiblevalues'>
    <h3>click to add to <%= friend.first_name %>'s value list</h3>
    <%= erb :'values/_possiblevalues', locals: {moreValues: moreValues}%>
  </div>


<form id='morevalue_form' action='/values' method='GET' >
  <button type="submit">More Values</button>
</form>

<form id='addvalue_form' action='/addvalue' method='POST'>
  <input type='hidden' name='friend_id' value='<%= friend.id %>'>
  <input type='text' name='word' placeholder='value'>
  <button type="submit" >  add</button>
</form>




</div>